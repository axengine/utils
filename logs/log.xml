<seelog minlevel="debug">
    <outputs formatid="main">
        <filter levels="debug">
			<rollingfile type="size" filename="./log/rootLogger_DEBUG.log" maxsize="102400000" maxrolls="5"/>
        </filter>		
        <filter levels="info">
			<rollingfile type="size" filename="./log/rootLogger_INFO.log" maxsize="102400000" maxrolls="5"/>
        </filter>
        <filter levels="warn">
			<rollingfile type="size" filename="./log/rootLogger_WARN.log" maxsize="102400000" maxrolls="5"/>
        </filter>		
        <filter levels="error">
			<rollingfile type="size" filename="./log/rootLogger_ERROR.log" maxsize="102400000" maxrolls="5"/>
        </filter>		
        <filter levels="critical">
			<!--console/-->
			<rollingfile type="size" filename="./log/rootLogger_CRTL.log" maxsize="102400000" maxrolls="5"/>
            <!--<smtp formatid="criticalemail" senderaddress="test@qq.com" sendername="dft" hostname="smtp.exmail.qq.com" hostport="25" username="test@qq.com" password="****">
                <recipient address="ligang@suntel.com.cn"/>
            </smtp>-->
			<!-- <conn net="tcp4" addr="server.address:5514" tls="true" insecureskipverify="true" /> -->
            <!--<wechat formatid="wechat" baseurl="https://sc.ftqq.com">
                <recipient sckey="SCU10919T101abe9bac1ae6e848dfb54ab7f913******************"/>
            </wechat>-->			
        </filter>
    </outputs>
    <formats>
        <format id="main" format="%Date(2006-01-02 15:04:05.000000) [%LEV] %Msg %File:%Line %n" />
        <format id="criticalemail" format="Critical error on our server!%n %Time %Date %RelFile %Func %n %Msg %n"/>
        <format id="wechat" format="Fatal-%Date-%Time-%RelFile-%Func-%Msg"/>
	</formats>
</seelog>